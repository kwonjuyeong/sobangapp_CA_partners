<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/z_default_toolbar"
        android:id="@+id/toolbar"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sig_navy"
        android:fontFamily="@font/tmoney"
        android:gravity="center"
        android:maxLength="40"
        android:maxLines="1"
        android:padding="20dp"
        android:text="남양주 다산도시 지금지구 근생 및 업무시설"
        android:textAlignment="center"
        android:textColor="@color/sig_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_man"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="20dp"
                app:srcCompat="@drawable/chart" />
            <Button
                android:id="@+id/progress_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:background="@drawable/round_man"
                android:textColor="@color/sig_navy"
                android:text="공정률"
                android:gravity="center|start"
                android:textSize="22sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:background="@drawable/arrow_go" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_man"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="20dp"
                app:srcCompat="@drawable/daily2" />

            <Button
                android:id="@+id/daily_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:background="@drawable/round_man"
                android:textColor="@color/sig_navy"
                android:text="감리 일지"
                android:gravity="center|start"
                android:textSize="22sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:background="@drawable/arrow_go" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_man"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="20dp"
                app:srcCompat="@drawable/check" />

            <Button
                android:id="@+id/checklist_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:layout_weight="0.2"
                android:background="@drawable/round_man"
                android:textColor="@color/sig_navy"
                android:textStyle="bold"
                android:text="체크 리스트"
                android:gravity="center|start"
                android:textSize="22sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:background="@drawable/arrow_go" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_man"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="20dp"
                app:srcCompat="@drawable/checklist" />

            <Button
                android:id="@+id/jajae_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:background="@drawable/round_man"
                android:textColor="@color/sig_navy"
                android:text="자재 검수, 승인"
                android:gravity="center|start"
                android:textSize="22sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:background="@drawable/arrow_go" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_man"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:srcCompat="@drawable/rewind" />

            <Button
                android:id="@+id/drawingreview_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:background="@drawable/round_man"
                android:textColor="@color/sig_navy"
                android:text="도면 검토"
                android:gravity="center|start"
                android:textSize="22sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:background="@drawable/arrow_go" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_man"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="20dp"
                app:srcCompat="@drawable/ic_baseline_feedback_24" />

            <Button
                android:id="@+id/feedback_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:text="피드백 요청"
                android:background="@drawable/round_man"
                android:textColor="@color/sig_navy"
                android:gravity="center|start"
                android:textSize="22sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:background="@drawable/arrow_go" />
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>